{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "bleed": true,
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "verticalContentAlignment": "Center",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://img.icons8.com/fluency/48/combo-chart.png",
                                    "size": "Small",
                                    "altText": "Logo"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Status Report Semanal",
                                    "size": "Small",
                                    "weight": "Bolder",
                                    "isSubtle": true,
                                    "wrap": true
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${summary}",
                                    "size": "Large",
                                    "weight": "Bolder",
                                    "wrap": true,
                                    "maxLines": 2
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "Oferta ${jirakey}",
                                    "wrap": true,
                                    "isSubtle": true,
                                    "spacing": "None"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "horizontalAlignment": "Right",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Week ${semana}",
                                    "weight": "Bolder",
                                    "size": "Medium",
                                    "wrap": true,
                                    "horizontalAlignment": "Right"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${data_hora}",
                                    "spacing": "None",
                                    "size": "Medium",
                                    "isSubtle": true,
                                    "wrap": true,
                                    "horizontalAlignment": "Right"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        }
                    ]
                }
            ]
        },
        {
            "type": "ColumnSet",
            "separator": true,
            "spacing": "Medium",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "verticalContentAlignment": "Top",
                    "items": [
                        {
                            "type": "FactSet",
                            "spacing": "None",
                            "facts": [
                                {
                                    "title": "Cliente:",
                                    "value": "${cliente}"
                                },
                                {
                                    "title": "Valor (‚Ç¨):",
                                    "value": "${valor_eur}"
                                },
                                {
                                    "title": "Valor (R$):",
                                    "value": "${valor_brl}"
                                },
                                {
                                    "title": "Mercado:",
                                    "value": "${mercado}"
                                },
                                {
                                    "title": "Semana:",
                                    "value": "${semana}"
                                },
                                {
                                    "title": "Budget:",
                                    "value": "${budget_alocado}h alocadas | ${budget_consumido}h consumidas (${budget_percentual}%)"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "verticalContentAlignment": "Top",
                    "items": [
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Status",
                                    "wrap": true,
                                    "size": "Small",
                                    "isSubtle": true,
                                    "horizontalAlignment": "Right"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${status}",
                                    "color": "${status_color}",
                                    "spacing": "None",
                                    "size": "Large",
                                    "weight": "Bolder",
                                    "wrap": true,
                                    "horizontalAlignment": "Right"
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "spacing": "Medium",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Margem",
                                    "wrap": true,
                                    "size": "Small",
                                    "isSubtle": true,
                                    "horizontalAlignment": "Right"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${margem}",
                                    "spacing": "None",
                                    "size": "Large",
                                    "weight": "Bolder",
                                    "wrap": true,
                                    "horizontalAlignment": "Right"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "separator": true,
            "spacing": "Large",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Por favor, atualize o status desta oferta:",
                    "wrap": true,
                    "size": "Small",
                    "isSubtle": true
                },
                {
                    "type": "Input.ChoiceSet",
                    "id": "status_projeto",
                    "label": "üö¶ Status do Projeto",
                    "style": "expanded",
                    "isRequired": true,
                    "errorMessage": "Selecione o status do projeto",
                    "choices": [
                        {
                            "title": "üü¢ Verde - Sem problemas",
                            "value": "Verde"
                        },
                        {
                            "title": "üü° Amarelo - Aten√ß√£o necess√°ria",
                            "value": "Amarelo"
                        },
                        {
                            "title": "üî¥ Vermelho - Cr√≠tico (requer observa√ß√£o)",
                            "value": "Vermelho"
                        }
                    ]
                },
                {
                    "type": "Input.ChoiceSet",
                    "id": "status_atual",
                    "label": "Status Atual da Oferta",
                    "style": "compact",
                    "isRequired": true,
                    "errorMessage": "Selecione o status",
                    "choices": [
                        {
                            "title": "üîµ Em An√°lise",
                            "value": "em_analise"
                        },
                        {
                            "title": "üõ†Ô∏è Em Desenvolvimento",
                            "value": "em_desenvolvimento"
                        },
                        {
                            "title": "üì§ Proposta Enviada",
                            "value": "enviada"
                        },
                        {
                            "title": "ü§ù Em Negocia√ß√£o",
                            "value": "negociacao"
                        },
                        {
                            "title": "‚úÖ Ganha (WON)",
                            "value": "won"
                        },
                        {
                            "title": "‚ùå Perdida (LOST)",
                            "value": "lost"
                        },
                        {
                            "title": "‚è∏Ô∏è Pausada",
                            "value": "pausada"
                        }
                    ]
                },
                {
                    "type": "Input.ChoiceSet",
                    "id": "probabilidade_ganho",
                    "label": "Probabilidade de Ganho",
                    "style": "compact",
                    "choices": [
                        {
                            "title": "25%",
                            "value": "25"
                        },
                        {
                            "title": "50%",
                            "value": "50"
                        },
                        {
                            "title": "75%",
                            "value": "75"
                        },
                        {
                            "title": "100%",
                            "value": "100"
                        }
                    ]
                },
                {
                    "type": "Input.Toggle",
                    "id": "reuniao_cliente",
                    "title": "Houve reuni√£o com cliente esta semana?",
                    "value": "false",
                    "valueOn": "true",
                    "valueOff": "false"
                },
                {
                    "type": "Input.ChoiceSet",
                    "id": "reuniao_tipo",
                    "label": "Tipo de reuni√£o (se marcou reuni√£o)",
                    "style": "expanded",
                    "choices": [
                        {
                            "title": "Presencial",
                            "value": "Presencial"
                        },
                        {
                            "title": "Remoto",
                            "value": "Remoto"
                        }
                    ]
                },
                {
                    "type": "Input.Toggle",
                    "id": "proposta_atualizada",
                    "title": "Proposta foi atualizada esta semana?",
                    "value": "false",
                    "valueOn": "true",
                    "valueOff": "false"
                },
                {
                    "type": "Input.Toggle",
                    "id": "bloqueio_existente",
                    "title": "Existe algum bloqueio ou impedimento?",
                    "value": "false",
                    "valueOn": "true",
                    "valueOff": "false"
                },
                {
                    "type": "Input.Date",
                    "id": "previsao_fechamento",
                    "label": "üìÖ Previs√£o de Fechamento"
                },
                {
                    "type": "Input.ChoiceSet",
                    "id": "tipo_demanda",
                    "label": "Tipo da oportunidade (RFP/RFI/RFQ/Oferta)",
                    "style": "compact",
                    "isRequired": true,
                    "errorMessage": "Selecione o tipo da oportunidade",
                    "choices": [
                        {
                            "title": "Oferta (regular)",
                            "value": "Oferta"
                        },
                        {
                            "title": "RFI",
                            "value": "RFI"
                        },
                        {
                            "title": "RFQ",
                            "value": "RFQ"
                        },
                        {
                            "title": "RFP",
                            "value": "RFP"
                        }
                    ]
                },
                {
                    "type": "Input.Text",
                    "id": "rfp_relacionada",
                    "label": "RFP relacionada (obrigat√≥rio se RFI/RFQ)",
                    "placeholder": "Informe a futura RFP relacionada (ex.: chave JIRA, link ou ID)...",
                    "isMultiline": false,
                    "maxLength": 255
                },
                {
                    "type": "Input.Text",
                    "id": "observacoes",
                    "label": "‚ö†Ô∏è Observa√ß√µes (pr√©-preenchido do JIRA; OBRIGAT√ìRIO se status Vermelho)",
                    "value": "${observacoes_jira}",
                    "placeholder": "Edite/complete as observa√ß√µes (JIRA + complemento semanal)...",
                    "isMultiline": true,
                    "maxLength": 1000
                }
            ]
        },
        {
            "type": "Container",
            "separator": true,
            "spacing": "Medium",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Risks & Opportunities",
                                    "weight": "Bolder",
                                    "size": "Medium",
                                    "wrap": true
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "ActionSet",
                                    "actions": [
                                        {
                                            "type": "Action.ToggleVisibility",
                                            "title": "Abrir / Editar",
                                            "targetElements": [
                                                "riscos_body"
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        }
                    ]
                },
                {
                    "type": "Container",
                    "id": "riscos_body",
                    "isVisible": false,
                    "items": [
                        {
                            "type": "Input.Text",
                            "id": "riscos_oportunidades",
                            "label": "‚ö†Ô∏è Riscos & Oportunidades",
                            "placeholder": "Liste riscos principais e oportunidades (curto e objetivo)...",
                            "isMultiline": true,
                            "maxLength": 1000
                        }
                    ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "üì§ Enviar Status Report",
            "style": "positive",
            "data": {
                "action": "submit_status",
                "jirakey": "${jirakey}",
                "oferta_id": "${oferta_id}",
                "semana": "${semana}",
                "arquiteto_email": "${arquiteto_email}",
                "cardTypeId": "${cardTypeId}",
                "arquiteto_nome": "${arquiteto_nome}",
                "oferta_titulo": "${oferta_titulo}"
            }
        }
    ],
    "msteams": {
        "width": "Full",
        "cardTypeId": "${cardTypeId}"
    }
}